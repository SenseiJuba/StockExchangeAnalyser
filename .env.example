# Stock Exchange Analyzer Configuration
# Copy this file to .env and fill in your actual values

# Data Fetching Settings
SYMBOLS=AAPL,MSFT,GOOGL,TSLA
FETCH_INTERVAL=3600  # seconds (hourly)
DATA_RETENTION_DAYS=365

# Prediction Settings
PREDICTION_HORIZON=30  # days ahead
MODEL_TYPE=lstm  # lstm, arima, or random_forest
RETRAIN_INTERVAL=604800  # seconds (weekly)

# API Keys (if needed for additional data sources)
ALPHA_VANTAGE_API_KEY=your_api_key_here
IEX_CLOUD_API_KEY=your_api_key_here

# Database Settings (optional)
DB_TYPE=sqlite  # sqlite or postgresql
DB_PATH=data/stocks.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/analyzer.log
